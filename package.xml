 <notes>Initial release</notes>
 <contents>
  <dir baseinstalldir="PEAR" name="/">
   <dir name="scripts">
   <file baseinstalldir="/" name="pearsize.bat" role="script" install-as="pearsize.bat">
    <tasks:replace from="@PHP-BIN@" to="php_bin" type="pear-config" />
    <tasks:replace from="@BIN-DIR@" to="bin_dir" type="pear-config" />
    <tasks:replace from="@PEAR-DIR@" to="php_dir" type="pear-config" />
    <tasks:replace from="@DATA-DIR@" to="data_dir" type="pear-config" />
    <tasks:windowseol />
   </file>
   <file baseinstalldir="/" name="pearsize.php" role="script" install-as="pearsize">
    <tasks:replace from="@PHP-BIN@" to="php_bin" type="pear-config" />
    <tasks:replace from="@PACKAGE_VERSION@" to="version" type="package-info" />
    <tasks:unixeol />
   </file>
   </dir>
   <file baseinstalldir="/" name="Size/Size.php" role="php" install-as="PEAR/Size.php"/>
   <file baseinstalldir="/" name="Size/Size_Factory.php" role="php" install-as="PEAR/Size/Factory.php"/>
   <file baseinstalldir="/" name="Size/Size_Output_text.php" role="php" install-as="PEAR/Size/Output_text.php"/>
   <file baseinstalldir="/" name="Size/Size_Output_html.php" role="php" install-as="PEAR/Size/Output_html.php"/>
   <file name="TODO" role="doc" />
   <dir name="docs">
    <file name="script-usage.txt" role="doc" />
   </dir>
  </dir>
 </contents>
 <dependencies>
  <required>
   <php>
    <min>5.1.4</min>
   </php>
   <pearinstaller>
    <min>1.4.0</min>
   </pearinstaller>
   <package>
    <name>Console_Getargs</name>
    <channel>pear.php.net</channel>
    <min>1.3.4</min>
   </package>
   <package>
    <name>Console_Table</name>
    <channel>pear.php.net</channel>
    <min>1.0.8</min>
   </package>
   <package>
    <name>HTML_Table</name>
    <channel>pear.php.net</channel>
    <min>1.8.2</min>
   </package>
  </required>
 </dependencies>
 <phprelease>
  <installconditions>
   <os>
    <name>windows</name>
   </os>
  </installconditions>
  <filelist>
   <install name="scripts/pearsize.bat" as="pearsize.bat" />
  </filelist>
 </phprelease>
